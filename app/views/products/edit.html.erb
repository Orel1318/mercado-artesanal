<h1 class="text-center my-4 mt-4 mb-4">Edit Product</h1>

<div class="container d-flex justify-content-center mb-5">
  <div class="card shadow-sm p-4" style="max-width: 600px; width: 100%;">
    <%= simple_form_for @product do |f| %>
      <div class="mb-3">
        <%= f.input :name, label: "Name", input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :description, label: "Description", input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :price, label: "Price", input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :stock, label: "Stock", input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :category_id, collection: Category.all, label_method: :name, value_method: :id, prompt: "Select category", label: "Category", input_html: { class: "form-control" } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, "Edit", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
