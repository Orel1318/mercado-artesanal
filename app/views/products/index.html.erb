<h1 class="text-center mt-5">All Products</h1>

<div class="d-flex justify-content-center mb-3">
  <%= link_to 'New Product', new_product_path, class: 'btn btn-primary ml-3' %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="https://www.entornoturistico.com/wp-content/uploads/2024/06/Artesania-de-Perritos-Colimotes.jpg" class="card-img-top" alt="<%= product.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= number_to_currency(product.price) %></p>
            <p class="card-text"><%= product.category.name if product.category %></p>
            <%= link_to 'See more', product_path(product), class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
